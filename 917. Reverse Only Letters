class Solution:
    def reverseOnlyLetters(self, s: str) -> str:
        ans = [] # init an empty storage
        j = len(ans) - 1 # define pointer one 
        for i, x in enumerate(s): # define a hash table 
            if x.isalpha():
                while not s[j].isalpha():
                    j -= 1
                ans.append(s[j]) # not character return, if character, pointer move backward
                j -= 1
            else:
                ans.append(x)
        return "".join(ans) # no space in between 
    

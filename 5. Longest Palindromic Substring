class Solution:
    def longestPalindrome(self, s: str) -> str:
        res = ""
        reslen = 0
        
        for i in range(len(s)):
        # odd number
            l,r = i,i #set up two pointer, starting from the middle, one moving towards left and one moving towards right 
            while l>=0 and r<len(s) and s[l]==s[r]: 
                if(r-l+1>reslen):
                    res = s[l:r+1]
                    reslen = r-l+1
                l -= 1
                r += 1

            # even number      
            l,r = i,i+1
            while l>=0 and r<len(s) and s[l]==s[r]:
                if(r-l+1>reslen):
                    res = s[l:r+1]
                    reslen = r-l+1 
                l -= 1
                r += 1

        return res
"""
method 1: go through every single pair from left to right, b, ba, bab, baba...however, this will take O(nx) x is power. 
method 2: two pointers - meet in the middle s[i] == s[j] until meets in the middle 
edge case: think about odd or even number 
"""
        
        

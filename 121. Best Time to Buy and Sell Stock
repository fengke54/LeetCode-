class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        
        # finding the minimum buy price and the largest profit. 
        # assume price[i] is the largest 
        # init price as zero, and go through the loop 
  
        if not prices: 
            return 0 
        
        # init values 
        profit = 0 
        buy_price = prices[0]
        
        for i in range(len(prices)):
            if buy_price > prices[i]:
                buy_price = prices[i]
            else: 
                profit = max((prices[i] - buy_price, profit))    
        return profit 
    
# return without indentation. If there is an indent, every value will be executed in this loop. If no indentation, the returned value is the new value entering the loop. 
    
